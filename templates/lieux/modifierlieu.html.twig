{% extends 'base.html.twig' %}


{% block title %}Modification lieu{% endblock %}
{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h2 class="title">Modifer lieu</h2>
                <hr>
            </div>
        </div>

        {{ form_start(lieuForm) }}
        <div class="form container">
            <div class="form-group ">
                {{ form_row(lieuForm.no_ville, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(lieuForm.nom , {'attr':{'class':'form-control'}}) }}
            </div>

            <div  class="form-group">
                {{ form_row(lieuForm.rue , {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(lieuForm.latitude , {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{ form_row(lieuForm.longitude , {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="">
                <button class="btn btn-outline-primary">Enregistrer</button>
            </div>
            {{ form_end(lieuForm) }}
        </div>
    </div>
{% endblock %}