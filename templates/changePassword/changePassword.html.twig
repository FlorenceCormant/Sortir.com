{% extends 'base.html.twig' %}

{% form_theme ChangePasswordForm 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ parent() }} | Changement du mot de passe{% endblock %}

{% block body %}

    <h2 class="title">Modification du mot de passe</h2>
    <hr>
    <div class="new_password">
        {{ form_start(ChangePasswordForm) }}
        <div class="form-container">
            <div class="form-group">
                Ancien mot de passe
                : {{ form_widget(ChangePasswordForm.oldPassword,{'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                Nouveau mot de passe
                : {{ form_widget(ChangePasswordForm.newPassword.first,{'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                Confirmer nouveau mot de passe
                : {{ form_widget(ChangePasswordForm.newPassword.second,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="button_password">
            <button class="btn btn-outline-info">Modifier</button>
            {{ form_end(ChangePasswordForm) }}

            <a class="btn btn-outline-danger" role="button" href="{{ path('profil_edit',{'id' : app.user.id}) }}">
                Annuler
            </a>
        </div>
    </div>

{% endblock %}