{% extends 'base.html.twig' %}

{% block title %}Create Sortie{% endblock %}

{% block body %}

    <div class="container-fluid pt-3">
        <div class="row">
            <div class="col">
                <h3>Créer une sortie</h3>
                <hr>
            </div>
        </div>

        {{ form_start(sortieForm) }}
        <div class="form">
            <div class="form-group ">
                {{ form_row(sortieForm.nom, {'attr':{'class':'form-control'}}) }}
            </div>
             <div class="form-group " >
                Date debut :  {{ form_widget(sortieForm.date_debut.date.day)}}{{ form_widget(sortieForm.date_debut.date.month) }}{{ form_widget(sortieForm.date_debut.date.year) }}
                 {{ form_widget(sortieForm.date_debut.time.hour) }} Heures  {{ form_widget(sortieForm.date_debut.time.minute) }} Minutes

             </div>
            <div class="form-group">
               Date fin : {{ form_widget(sortieForm.date_cloture.date.day)}}{{ form_widget(sortieForm.date_cloture.date.month) }}{{ form_widget(sortieForm.date_cloture.date.year) }}
                {{ form_widget(sortieForm.date_cloture.time.hour) }} Heures  {{ form_widget(sortieForm.date_cloture.time.minute) }} Minutes
            </div>
            <div class="form-group">
                {{ form_row(sortieForm.nb_inscriptions_max , {'attr':{'class':'form-control'}}) }}
            </div>

            <div  class="form-group">
                {{ form_row(sortieForm.duree , {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(sortieForm.description_infos , {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{ form_row(sortieForm.noLieu , {'attr':{'class':'form-control'}}) }}
            </div>
            <button>Créer une sortie</button>


        {{ form_end(sortieForm) }}
        </div>
    </div>



{% endblock %}
